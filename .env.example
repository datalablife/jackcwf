# Application Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with actual secrets

# Application
APP_NAME=working
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Server Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=logs/app.log

# Reflex Configuration
REFLEX_ENV=development  # development or production
REFLEX_FRONTEND_PORT=3000
REFLEX_BACKEND_PORT=8000

# API Keys (External Services)
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=

# Coolify (for deployment)
COOLIFY_URL=https://coolpanel.jackcwf.com
COOLIFY_API_TOKEN=
COOLIFY_APP_UUID=

# Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_ID=

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_API_DOCS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=10

# Email (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/testdb
