# PostgreSQL Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@host.docker.internal:5432/database

# Encryption Configuration
ENCRYPTION_KEY=your-256-bit-key-base64-encoded

# File Upload Configuration
MAX_FILE_SIZE=536870912
UPLOAD_DIR=./tmp/uploads

# Schema Cache Configuration
SCHEMA_CACHE_TTL=300

# Application Configuration
APP_NAME=AI Data Analyzer
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=2048

# Memori Memory Management Configuration
MEMORI_ENABLED=true
MEMORI_DB_TYPE=postgresql
MEMORI_CONSCIOUS_INGEST=true
MEMORI_AUTO_INGEST=true
MEMORI_ENABLE_SEMANTIC_SEARCH=true
MEMORI_MAX_MEMORY_ITEMS=1000
MEMORI_MEMORY_RETENTION_DAYS=90

# Memori Database (if using PostgreSQL for Memori)
MEMORI_DB_HOST=localhost
MEMORI_DB_PORT=5432
MEMORI_DB_NAME=memori_memory
MEMORI_DB_USER=postgres
MEMORI_DB_PASSWORD=password

# Memori SQLite Configuration (alternative to PostgreSQL)
MEMORI_SQLITE_PATH=./memori.db

# Cache and Performance
MEMORI_CACHE_TTL_SECONDS=300
MEMORI_ENABLE_CACHING=true
MEMORI_BATCH_SIZE=32

# Monitoring
MEMORI_ENABLE_MONITORING=true
MEMORI_LOG_LEVEL=INFO

# Multi-tenant Support
MEMORI_ENABLE_MULTI_TENANT=false
MEMORI_TENANT_ISOLATION=true
