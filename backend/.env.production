DATABASE_URL=postgresql+asyncpg://jackcwf888:Jack_00492300@pgvctor.jackcwf.com:5432/data_management_prod

# ========================================
# Security Configuration
# ========================================
# NOTE: CRITICAL - Generate a new production encryption key before deployment!
# This is a placeholder and MUST be replaced with a secure key
ENCRYPTION_KEY=your-production-encryption-key-base64-encoded-256-bits-minimum

# ========================================
# Server Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
APP_NAME=Data Management System
APP_VERSION=0.1.0

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=536870912  # 512 MB
UPLOAD_DIR=./tmp/uploads
SCHEMA_CACHE_TTL=600  # 10 minutes for production

# ========================================
# CORS Configuration
# ========================================
# IMPORTANT: Update these with actual production domains
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# ========================================
# Logging Configuration
# ========================================
DEBUG=false
LOG_LEVEL=WARNING
ENVIRONMENT=production

# ========================================
# Database Connection Pool
# ========================================
# Production-optimized connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# ========================================
# Application Performance
# ========================================
# Request timeout in seconds
REQUEST_TIMEOUT=30

# ========================================
# Security Headers
# ========================================
ENABLE_HTTPS=true
SECURE_COOKIE=true
SAME_SITE_COOKIE=Strict
HSTS_MAX_AGE=31536000  # 1 year in seconds

# ========================================
# Monitoring and Observability
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# Feature Flags
# ========================================
# Disable API docs in production for security
ENABLE_API_DOCS=false
TESTING=false
