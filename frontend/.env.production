# ========================================
# Production Environment Configuration
# Last Updated: 2025-11-11
# ========================================

# ========================================
# API Configuration
# ========================================
# NOTE: Update with actual production API domain
VITE_API_URL=https://api.your-domain.com
VITE_API_TIMEOUT=30000  # 30 seconds

# ========================================
# Application Configuration
# ========================================
VITE_APP_NAME=Data Management System
VITE_APP_VERSION=0.1.0
VITE_ENVIRONMENT=production

# ========================================
# Debug and Development Settings
# ========================================
VITE_DEBUG=false
VITE_TESTING=false
VITE_TEST_MODE=false

# ========================================
# Feature Flags
# ========================================
# Disable mock API in production
VITE_MOCK_API=false

# ========================================
# Security Settings
# ========================================
# Enable Content Security Policy
VITE_ENABLE_CSP=true

# Enable HSTS header
VITE_ENABLE_HSTS=true

# ========================================
# Performance Settings
# ========================================
# Cache strategy: 'memory', 'localStorage', or 'none'
VITE_CACHE_STRATEGY=localStorage

# Cache TTL in milliseconds
VITE_CACHE_TTL=600000  # 10 minutes

# ========================================
# Logging Configuration
# ========================================
# Log level: 'error', 'warn', 'info', 'debug'
VITE_LOG_LEVEL=warn

# Send logs to server (if applicable)
VITE_SEND_LOGS_TO_SERVER=true
