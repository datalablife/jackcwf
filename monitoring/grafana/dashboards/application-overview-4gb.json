{
  "dashboard": {
    "id": null,
    "uid": "langchain-ai-4gb",
    "title": "LangChain AI - 4GB Lightweight Overview",
    "tags": ["4gb", "lightweight"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "服务健康状态",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{job=\"fastapi-backend\"}",
            "legendFormat": "FastAPI"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "内存使用 (MB)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "使用率 %"
          }
        ]
      },
      {
        "id": 3,
        "title": "API 平均延迟 (ms)",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(api_request_duration_seconds[1m]) * 1000",
            "legendFormat": "{{ handler }}"
          }
        ]
      },
      {
        "id": 4,
        "title": "缓存命中率 %",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "redis:cache_hit_rate:1m * 100",
            "legendFormat": "命中率"
          }
        ]
      },
      {
        "id": 5,
        "title": "数据库连接数",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "连接数"
          }
        ]
      },
      {
        "id": 6,
        "title": "Redis 内存使用 (MB)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "MB"
          }
        ]
      },
      {
        "id": 7,
        "title": "CPU 使用率 %",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 22
        },
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
            "legendFormat": "CPU %"
          }
        ]
      }
    ]
  }
}
