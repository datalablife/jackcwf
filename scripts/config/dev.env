# ============================================================================
# 开发环境配置 (Development Environment)
# ============================================================================

# 环境标识
ENVIRONMENT=development

# ============================================================================
# 后端配置
# ============================================================================

# 数据库连接（开发环境）
DATABASE_URL=postgresql+asyncpg://jackcwf888:Jack_00492300@pgvctor.jackcwf.com:5432/data_management_dev

# 后端服务配置
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_WORKERS=1
BACKEND_RELOAD=true

# Python 配置
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# 调试和开发选项
DEBUG=true
LOG_LEVEL=DEBUG
ENABLE_API_DOCS=true

# 数据库连接池
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# ============================================================================
# 前端配置
# ============================================================================

# 前端服务配置
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000

# 前端环境
NODE_ENV=development

# ============================================================================
# CORS 和安全
# ============================================================================

# 允许的 CORS 来源
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# 不需要 HTTPS（开发环境）
HTTPS=false
SECURE_COOKIE=false

# ============================================================================
# 日志配置
# ============================================================================

# 日志目录
LOG_DIR=logs/dev

# 日志级别
# DEBUG: 详细调试信息
# INFO: 一般信息
# WARNING: 警告信息
# ERROR: 错误信息
LOG_LEVEL=DEBUG

# 日志格式
LOG_FORMAT=detailed  # detailed 或 simple

# ============================================================================
# 功能开关
# ============================================================================

# 启用性能监控
ENABLE_METRICS=false

# 启用热重载（开发）
ENABLE_RELOAD=true

# 启用 API 文档
ENABLE_API_DOCS=true

# ============================================================================
# 其他配置
# ============================================================================

# 超时配置
REQUEST_TIMEOUT=30
DB_CONNECT_TIMEOUT=10

# 重试配置
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1
