# ============================================================================
# 测试环境配置 (Test Environment)
# ============================================================================

# 环境标识
ENVIRONMENT=test

# ============================================================================
# 后端配置
# ============================================================================

# 数据库连接（测试环境）
DATABASE_URL=postgresql+asyncpg://jackcwf888:Jack_00492300@pgvctor.jackcwf.com:5432/data_management_test

# 后端服务配置
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8001
BACKEND_WORKERS=1
BACKEND_RELOAD=false

# Python 配置
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# 调试和开发选项
DEBUG=false
LOG_LEVEL=INFO
ENABLE_API_DOCS=true

# 数据库连接池
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# ============================================================================
# 前端配置
# ============================================================================

# 前端服务配置
FRONTEND_PORT=5174
VITE_API_URL=http://localhost:8001

# 前端环境
NODE_ENV=development

# ============================================================================
# CORS 和安全
# ============================================================================

# 允许的 CORS 来源
CORS_ORIGINS=http://localhost:3001,http://localhost:5174,http://127.0.0.1:3001,http://127.0.0.1:5174

# 不需要 HTTPS（测试环境）
HTTPS=false
SECURE_COOKIE=false

# ============================================================================
# 日志配置
# ============================================================================

# 日志目录
LOG_DIR=logs/test

# 日志级别
LOG_LEVEL=INFO

# 日志格式
LOG_FORMAT=simple

# ============================================================================
# 功能开关
# ============================================================================

# 启用性能监控
ENABLE_METRICS=true

# 禁用热重载（测试环境）
ENABLE_RELOAD=false

# 启用 API 文档（用于测试）
ENABLE_API_DOCS=true

# ============================================================================
# 其他配置
# ============================================================================

# 超时配置
REQUEST_TIMEOUT=30
DB_CONNECT_TIMEOUT=10

# 重试配置
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1

# 测试特定配置
TEST_MODE=true
SEED_TEST_DATA=true
